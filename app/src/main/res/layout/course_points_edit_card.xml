<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardViewCoursePointsEdit"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="3dp"
        app:contentPadding="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cardFrontEdit"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/flashcard_front"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:ellipsize="end"
                />



            <TextView
                android:id="@+id/cardBackEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flashcard_back"
                android:textColor="@color/black"
                android:layout_below="@+id/cardFrontEdit"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/cardFrontEdit"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:ellipsize="end"
                />



            <TextView
                android:id="@+id/sentenceEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:text="@string/sentence"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/cardFrontEdit"
                android:layout_marginStart="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/cardBackEdit"
                android:layout_alignParentEnd="true"
                android:background="@color/white"
                android:maxLines="2"
                android:ellipsize="end"
                />






        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>