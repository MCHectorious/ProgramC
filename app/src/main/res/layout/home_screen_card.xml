<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@color/red"
                android:text="Accounting"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="1sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:layout_marginRight="0dp"
                />

            <ImageView
                android:id="@+id/options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/courseName"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/vertical_dots" />

            <TextView
                android:id="@+id/qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/courseName"
                android:textColor="@color/darkDarkGrey"
                android:text="GCSE"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/courseName"
                android:textColor="@color/darkDarkGrey"
                android:text="28th June"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/examBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/qualification"
                android:layout_below="@+id/courseName"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/date"
                android:layout_toRightOf="@+id/qualification"
                android:text="AQA"
                android:textAlignment="center"
                android:textColor="@color/darkDarkGrey" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>
