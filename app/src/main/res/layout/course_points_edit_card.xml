<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cardFrontEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flashcard Front"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/border1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:background="@color/red"
                android:layout_below="@+id/cardFrontEdit"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/cardFrontEdit"
                />

            <TextView
                android:id="@+id/cardBackEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flashcard Back"
                android:textColor="@color/black"
                android:layout_below="@+id/border1"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/cardFrontEdit"
                />

            <TextView
                android:id="@+id/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="     "
                android:layout_toRightOf="@+id/cardFrontEdit"
                android:layout_alignBottom="@+id/cardBackEdit"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/sentenceEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:text="Sentence"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/border2"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/cardBackEdit"
                android:layout_alignParentRight="true"
                />






        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>