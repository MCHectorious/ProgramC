<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hector.csprojectprogramc">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ExamBoardScreen"
            android:label="@string/title_activity_exam_board_screen"
            />
        <activity
            android:name=".Activities.QualificationScreen"
            android:label="@string/title_activity_qualification_screen"
            />
        <activity
            android:name=".Activities.CourseListScreen"
            android:label="@string/title_activity_course_list_screen"
            />
        <activity
            android:name=".Activities.CourseScreen"
            android:label="@string/title_activity_course_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.CoursePointsScreen"
            android:label="@string/title_activity_course_points" />
        <activity
            android:name=".Activities.RevisionScreen"
            android:label="@string/title_activity_revision_screen"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            ></activity>
    </application>

</manifest>