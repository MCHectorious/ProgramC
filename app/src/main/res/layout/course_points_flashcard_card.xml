<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardViewCoursePointsFlashcard"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/red"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardSide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:textAlignment="center"
                android:text="@string/card_side"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:background="@color/white"
                />

            <ImageView
                android:id="@+id/leftPointer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/cardSide"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/double_left_chevron" />


            <ImageView
                android:id="@+id/rightPointer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/cardSide"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"

                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/double_right_chevron" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>