<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/cardFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:text="Flashcard Front"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/cardBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/border1"
                android:text="Flashcard Back"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                />

            <EditText
                android:id="@+id/sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/cardBack"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/border2"
                android:text="Sentence"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/border1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sentences"
                android:text=" "
                android:background="@color/red"
                android:layout_toLeftOf="@+id/sentence"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/border2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/border1"
                android:layout_toEndOf="@+id/sentences"
                android:background="@color/red"
                android:layout_alignBottom="@+id/cardBack"
                android:layout_alignParentTop="true"
                android:text="     "
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/editDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/border2"
                android:layout_alignEnd="@+id/border2"
                app:srcCompat="@drawable/vertical_dots"
                android:layout_marginTop="5dp"
                
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>